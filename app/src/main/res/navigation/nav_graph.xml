<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/testFragment">

    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.formularionavogation.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" >
        <action
            android:id="@+id/action_testFragment_to_resultsFragment"
            app:destination="@id/resultsFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.example.formularionavogation.ResultsFragment"
        android:label="fragment_results"
        tools:layout="@layout/fragment_results" >
        <argument
            android:name="nombre"
            app:argType="string"
            android:defaultValue="Vacio" />
        <argument
            android:name="apellidoPat"
            app:argType="string"
            android:defaultValue="Vacio" />
        <argument
            android:name="apellidoMat"
            app:argType="string"
            android:defaultValue="Vacio" />
        <argument
            android:name="nombreUsuario"
            app:argType="string"
            android:defaultValue="Vacio" />
        <argument
            android:name="correo"
            app:argType="string"
            android:defaultValue="Vacio" />
    </fragment>

</navigation>